function room_Load()
{
	Door[eDoorNumBad].Init(oTuer, hTuer);
	Door[eDoorNumWasser1].Init(oWasser, hWasserhahn);
	oWasser.Clickable = false;
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuer_AnyClick()
{
	if ( Door[eDoorNumBad].Click() == 0 ) Unhandled();
}


